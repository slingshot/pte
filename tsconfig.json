{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src", "types"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
    }
  },
  "compilerOptions": {
    "module": "esnext",
    "strict": true
  }
}
