{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src", "types"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
