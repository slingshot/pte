{
  "name": "pte",
  "description": "Universal theming utilities for any JavaScript or TypeScript environment",
  "keywords": [
    "theming",
    "react",
    "server components",
    "rsc",
    "styling",
    "css"
  ],
  "version": "0.4.3",
  "license": "MIT",
  "author": "Sanil Chawla",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/pte.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/slingshot/pte.git"
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "bin": {
    "pte": "./src/cli.ts"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build": "dts build",
    "lint": "eslint ./src/",
    "prepare": "dts build",
    "size": "size-limit",
    "start": "dts watch",
    "test": "dts test",
    "release": "dts build && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint --fix src/"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=16"
  },
  "size-limit": [
    {
      "path": "dist/pte.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/pte.esm.js",
      "limit": "20 KB"
    }
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@ssh/eslint-config": "^1.0.0",
    "@tsconfig/recommended": "^1.0.2",
    "@types/node": "^18.16.13",
    "@types/react": "^18.2.6",
    "@types/yargs": "^17.0.24",
    "dts-cli": "^2.0.3",
    "eslint": "^8.40.0",
    "husky": "^8.0.3",
    "size-limit": "^8.2.4",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.1",
    "typescript": "^5.0.4",
    "yargonaut": "^1.1.4",
    "yargs": "^17.7.2"
  }
}
